<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Text Here"
        android:ems="10"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_example_edit_text"
        android:layout_margin="10dp"/>

    <TextView
        android:text="Text will be shown here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_example_edit_text"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_example_text_view"
        android:layout_margin="10dp"
        android:paddingBottom="50dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <Button
        android:text="Reset fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_example_text_view"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_example_reset_fields_button" />

    <Button
        android:text="Update fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_example_reset_fields_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_example_update_fields_button" />

</RelativeLayout>